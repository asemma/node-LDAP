/*jshint globalstrict:true, node:true, trailing:true, mocha:true unused:true */

'use strict';

var LDAP = require('../');
var assert = require('assert');
var ldap;
var errors = {};;

ldap = new LDAP({uri: 'ldap://localhost:1234', connecttimeout: 1000});
setInterval(function() {
    ldap.search({
        base:   'dc=sample,dc=com',
        filter: '(objectClass=*)',
        scope:  LDAP.SUBTREE
    }, function(err, res) {
        if (err) {
            if (!errors[err.message]) {
                errors[err.message] = 0;
            }
            errors[err.message]++;
            return;
        }
    });
}, 10);

setInterval(function() {
    console.log('âœ“ ' + new Date());
    console.log(ldap.stats);
    console.log(errors);
    console.log('');
}, 10000);
                       
